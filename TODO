#after puting the mlx in a file named mlx:
%.o: %.c
	$(CC) -Wall -Wextra -Werror -Imlx -c $< -o $@


$(NAME): $(OBJ)
	$(CC) $(OBJ) -Lmlx -lmlx -framework OpenGL -framework AppKit -o $(NAME)

libmlx.dylib in the same dir as the target

